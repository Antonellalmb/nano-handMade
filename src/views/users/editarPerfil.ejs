<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
    <!-- Preload the Whole Page -->
    <div id="preloader">      
    <div id="loading-animation">&nbsp;</div>
    </div>
        
        <!-- Navbar -->
        <%- include('../partials/header') %>

       
    <!-- editarPerfil.ejs -->

    <div class="mainLogin">
        <div class="left">
            <section class="copy">
                <h2 class="h2Perfil">Prontos para trazer a tranquilidade e a beleza do mar para o seu lar</h2>
            </section>
        </div>
        <div class="right">
            <form class="login-form" action="/user/editarPerfil/<%=usuario.id%>?_method=PUT" method="POST">
                <section class="copy">
                    <h2>Editar Perfil</h2>
                </section>
                <div class="login-container">
                    <div>
                        <label class="labelPerfil" for="email">Email</label>
                        <input class="log-control" type="email" name="email" value="<%= usuario.usr_email %>" placeholder=" Email" required>
                    </div>
                    <div class="input-container password">
                        <label class="labelPerfil" for="contrasenia">Nova Senha</label>
                        <input class="log-control" type="password" name="contrasenia" placeholder=" Nova Senha">
                    </div>
                    <div>
                        <label class="labelPerfil" for="direccion">Endereço</label>
                        <input class="log-control" type="text" name="address" value="<%= usuario.usr_address %>" placeholder=" Endereço">
                    </div>
                </div>
                <button class="botonLog" type="submit" name="guardar" value="Guardar">Guardar </button>
            </form>
        </div>
    </div>


    <!-- Footer
    ================================================== -->
