    <div id="loading-animation">&nbsp;</div>
    </div>
        
 <!-- Navbar -->
    <%- include('../partials/header') %>
        
    <h3>Admin Users</h3>
    <main class="mainInput">
        <div class="tableInput">    
            <form class="tables"action="/user/adminUsers/updateCategories" method="post">
                <table>
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Email</th>
                            <th>Categoria</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                            <tr>
                                <td><%= user.usr_name %></td>
                                <td><%= user.usr_email %></td>
                                <td>
                                    <select name="categoryId" id="categoryId">
                                        <% categories.forEach(category => { %>
                                            <option value="<%= category.id %>" <%= user.userCategory.id === category.id ? 'selected' : '' %>><%= category.roles %></option>
                                        <% }); %>
                                    </select>
                                </td>
                                <td>
                                    <input type="hidden" name="userId" value="<%= user.id %>">
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
                <div class="button-div"> 
                    <button class="botEnterTablas tablasBoton" type="submit">Guardar cambios</button>
                </div>
            </form>
        </div>
    </main>
