<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
<body>
  <!-- Preload the Whole Page -->
  <div id="preloader">      
    <div id="loading-animation">&nbsp;</div>
  </div>
        
  <!-- Navbar -->
  <%- include('../partials/header') %>
  <!-- End Navbar -->

  <main class="mainInput">
    <div class="tableInput">
      <div class="divTableTitle">
        <h4>Categorias de usuario</h4>
      </div>
      <!-- Tabla para mostrar categorías existentes -->
      <table>
        <thead>
          <tr>
            
            <th>Categoría</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% categorias.forEach(categoria => { %>
            <tr>
            
              <td><%= categoria.roles %></td>
              <td>
                <a href="/user/editarCategoria/<%= categoria.id %>"><i class="fa-solid fa-pen"></i> Editar</a>
              </td>
              <td>
                <a href="/user/eliminarCategoria/<%= categoria.id %>"><i class="fa-solid fa-trash"></i> Eliminar</a>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>

      <!-- Formulario para agregar nueva categoría -->
      <div class="formCategorias">
        <form action="/user/agregarCategoria" method="post">
          <label class="labelNovaCategoria" for="nuevaCategoria">NOVA CATEGORIA</label>
          <input class="inputCategoria" type="text" name="nuevaCategoria" placeholder=" Nova categoría" required>
          <input type="hidden" name="categoriaIdEditar" id="categoriaIdEditar" value="">
          <button class="botEnterTablas" type="submit">Adicionar</button>
        </form>
      </div>

    </div>

    <!-- Botones de acción fuera del formulario -->
    <div class="botonsInput"> 
      <button class="botEnterTablas tablasBoton" type="submit">Guardar mudanças</button>
      <a class="linkEditar" href="/user/adminUsers">
        <button class="botEnterTablas" type="button">Tabela de usuário</button>
      </a>
    </div>
  </main>
    
     <!-- Footer
    ================================================== -->
    <%- include('../partials/footer') %> 
    <!-- End footer -->
     <!-- JS libraries and scripts -->
  <script src="/js/jquery-1.11.3.min.js"></script>
  <script src="/js/bootstrap.min.js"></script>
  <script src="/js/bootstrap-hover-dropdown.min.js"></script>
  <script src="/js/jquery.appear.min.js"></script>
  <script src="/js/jquery.bxslider.min.js"></script>
  <script src="/js/jquery.owl.carousel.min.js"></script>
  <script src="/js/jquery.countTo.js"></script>
  <script src="/js/jquery.easing.1.3.js"></script>
  <script src="/js/jquery.imagesloaded.min.js"></script>
  <script src="/js/jquery.isotope.js"></script>
  <script src="/js/jquery.placeholder.js"></script>
  <script src="/js/jquery.smoothscroll.js"></script>
  <script src="/js/jquery.stellar.min.js"></script>
  <script src="/js/jquery.waypoints.js"></script>
  <script src="/js/jquery.fitvids.js"></script>
  <script src="/js/jquery.magnific-popup.min.js"></script>
  <script src="/js/jquery.ajaxchimp.min.js"></script>
  <script src="/js/jquery.countdown.js"></script>
  <script src="/js/jquery.navbar-scroll.js"></script>
  <script src="/js/main.js"></script>   
</body>
</html>