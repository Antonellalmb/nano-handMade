     <!-- End Navbar -->

    <!-- Main del formulario de carga de la tabla de Sizes --> 
    <main class="mainInput">
        <div class="tableInput">
            <form class="tables" action="/user/user/update/<%= user.id %>?_method=PUT" method="post" >
                <h4>Editar usuario</h4>  
                <div>
                    <input class="form-tablas" type="hidden" name="id" value=<%= user.id %>>
                    <br>
                    <p><%= user.usr_name %></p>
                    <p><%= user.usr_email %></p>
                    <p class="optionsSelect">Função</p>
                    <select class="form-tablas" name="rolSelected" id="rolTable">
                        <option value="" required>- Selecione a função - </option>
                        <!-- Recorre la tabla de roles y se compara con el valor del id del rol que tiene el elemento a editar y si councide se le asigna el "selected" para que se muestre en la vista como el valor que ya trae el item-->
                        <% categorias.forEach(categoria => {%>
                            <option value="<%= categoria.id %>"
                                <% if ( categoria.id == user.category_id) {%> selected <%}%>  
                                ><%= categoria.roles %>
                            </option>
                        <% }); %>
                    </select>
                    <!-- End Select-->
                </div>
                <div class="button-div"> 
                    <a> <button class="botEnterTablas tablasBoton" type="submit">Modificar Usuario</button> </a>
                    <a class="linkEditar" href="/user/adminUsers"> <button class="botEnterTablas" type="button">Ir a Tabela de Usuarios</button>  </a>
                </div>
        </form>
    </div>
        
    </main>
    <!-- End main -->
     
