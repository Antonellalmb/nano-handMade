                            <li><strong>Nome:</strong> <%= usuario.usr_name %></li>
                            <li><strong>Email:</strong> <%= usuario.usr_email %></li>
                            <li><strong>Endereço:</strong> <%= usuario.usr_address %></li>
                        </ul>
                        </form>
                    </div>
                    <div class="botonDiv">
                        <a href="/user/editarPerfil"> <button type="submit" class="botonLog">Editar Perfil</button> </a>
                    </div>
                    <div class="botonDiv">
                        <a href="/user/eliminarPerfil"> <button type="button" class="botonLog botonLog-danger">Excluir perfil</button></a>
                    </div>
                    <div class="botonDiv">
                        <a href="/user/logout"><button type="button" class="botonLog">Fechar Sessão</button> </a>
                    </div>
                </div>
            </div>
        </div>

