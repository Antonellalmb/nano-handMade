        <!-- perfil.ejs -->

        <div class="mainLogin">
            <div class="left">
                <section class="copy">
                    <h2>Prontos para trazer a tranquilidade e a beleza do mar para o seu lar</h2>
                </section>
            </div>
            <div class="right">
                <div class="login-form">
                    <section class="copy">
                        <h2>Benvindo  <%= usuario.usr_name %></h2>
                    </section>
                    <div class="login-container">
                        <form class="registroPerfil" action="/user/perfil/<%=usuario.id%>?_method=PUT" method="POST">
